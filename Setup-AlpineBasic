KEYMAPOPTS="us us"
HOSTNAMEOPTS="-n <HOSTNAME>"
INTERFACESOPTS="
auto eth0
iface eth0 inet dhcp
        hostname <HOSTNAME>
        gateway eth0

auto eth1
iface eth1 inet dhcp

